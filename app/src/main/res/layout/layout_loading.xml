<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5"/>

    <View
        android:id="@+id/viewShimmerOne"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline"/>

    <View
        android:id="@+id/viewShimmerTwo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="@id/viewShimmerOne"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/viewShimmerThree"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline"/>

    <View
        android:id="@+id/viewShimmerFour"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="@id/viewShimmerThree"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/viewShimmerFive"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/viewShimmerThree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline"/>

    <View
        android:id="@+id/viewShimmerSix"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintTop_toTopOf="@id/viewShimmerFive"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>